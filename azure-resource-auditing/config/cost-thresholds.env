# Cost Analysis Thresholds Configuration
# Define cost thresholds for identifying high-cost resources and optimization opportunities

# Monthly Cost Thresholds (in USD)
COST_THRESHOLD_CRITICAL=1000
COST_THRESHOLD_HIGH=500
COST_THRESHOLD_MEDIUM=100
COST_THRESHOLD_LOW=10

# Resource-Specific Cost Thresholds
VM_COST_THRESHOLD_HIGH=200
VM_COST_THRESHOLD_MEDIUM=50
STORAGE_COST_THRESHOLD_HIGH=100
STORAGE_COST_THRESHOLD_MEDIUM=25
DATABASE_COST_THRESHOLD_HIGH=300
DATABASE_COST_THRESHOLD_MEDIUM=75

# Percentage Thresholds for Cost Analysis
COST_INCREASE_ALERT_PERCENT=20  # Alert if cost increased by more than 20%
COST_OPTIMIZATION_TARGET_PERCENT=15  # Target for cost optimization recommendations

# Budget Thresholds
MONTHLY_BUDGET_WARNING_PERCENT=80
MONTHLY_BUDGET_CRITICAL_PERCENT=95

# Utilization-Based Cost Thresholds
LOW_UTILIZATION_THRESHOLD_PERCENT=10
IDLE_RESOURCE_THRESHOLD_PERCENT=5

# Time-based Cost Analysis
COST_ANALYSIS_LOOKBACK_DAYS=30
COST_TREND_ANALYSIS_DAYS=90

# Currency and Locale Settings
COST_CURRENCY="USD"
COST_LOCALE="en-US"
COST_DECIMAL_PLACES=2

# Savings Opportunity Thresholds
MIN_SAVINGS_OPPORTUNITY_USD=25
MIN_SAVINGS_OPPORTUNITY_PERCENT=10

# Resource Type Cost Priorities (for recommendations)
HIGH_PRIORITY_RESOURCE_TYPES="Microsoft.Compute/virtualMachines,Microsoft.Sql/servers,Microsoft.Storage/storageAccounts"
MEDIUM_PRIORITY_RESOURCE_TYPES="Microsoft.Network/loadBalancers,Microsoft.Network/applicationGateways"
LOW_PRIORITY_RESOURCE_TYPES="Microsoft.Network/publicIPAddresses,Microsoft.Network/networkSecurityGroups"

# Cost Optimization Categories
ENABLE_RIGHT_SIZING_ANALYSIS="true"
ENABLE_RESERVED_INSTANCE_ANALYSIS="true"
ENABLE_SPOT_INSTANCE_ANALYSIS="true"
ENABLE_STORAGE_TIER_ANALYSIS="true"

# Alert Thresholds for Specific Scenarios
ORPHANED_RESOURCE_COST_THRESHOLD=50
OVERPROVISIONED_RESOURCE_THRESHOLD=200
UNDERUTILIZED_RESOURCE_THRESHOLD=100