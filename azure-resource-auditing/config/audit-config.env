# Azure Resource Auditing - Main Configuration
# This file contains default settings for the Azure resource auditing suite

# Azure Configuration
AZURE_LOCATION="eastus"
AZURE_ENVIRONMENT="AzureCloud"

# Default Tag Configuration
TAG_ENVIRONMENT="production"
TAG_OWNER=""
TAG_PROJECT=""
TAG_COST_CENTER=""

# Audit Scope Configuration
INCLUDE_RESOURCE_TYPES=""  # Comma-separated list (empty = all types)
EXCLUDE_RESOURCE_TYPES="Microsoft.Insights/components,Microsoft.Insights/webtests"

# Retention and Cleanup Configuration
RETENTION_DAYS=90
ORPHAN_RETENTION_DAYS=30
CLEANUP_DRY_RUN="true"  # Safety: always start with dry run

# Performance Configuration
MAX_PARALLEL_JOBS=10
QUERY_TIMEOUT_SECONDS=300
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY_SECONDS=5

# Logging Configuration
LOG_LEVEL="INFO"  # DEBUG, INFO, WARN, ERROR
LOG_TO_FILE="false"
LOG_FILE_PATH=""

# Output Configuration
DEFAULT_OUTPUT_FORMAT="csv"
INCLUDE_EMPTY_FIELDS="true"
TIMESTAMP_FORMAT="%Y%m%d_%H%M%S"

# Cost Analysis Configuration
ENABLE_COST_ANALYSIS="true"
COST_ANALYSIS_PERIOD="MonthToDate"
COST_CURRENCY="USD"

# Security Configuration
MASK_SENSITIVE_DATA="false"
SENSITIVE_TAG_KEYS="password,secret,key,token"

# Notification Configuration (for future use)
ENABLE_NOTIFICATIONS="false"
NOTIFICATION_EMAIL=""
NOTIFICATION_WEBHOOK=""

# Custom Thresholds
VM_IDLE_THRESHOLD_DAYS=7
DISK_UNATTACHED_THRESHOLD_DAYS=30
STORAGE_IDLE_THRESHOLD_DAYS=90

# Advanced Options
ENABLE_RESOURCE_GRAPH_CACHE="true"
CACHE_DURATION_MINUTES=60
ENABLE_DETAILED_METRICS="false"

# Safety Features
REQUIRE_CONFIRMATION="true"
MAX_RESOURCES_PER_OPERATION=1000
ENABLE_SAFETY_TAGS="true"
SAFETY_TAG_KEY="audit-candidate"
SAFETY_TAG_VALUE="true"